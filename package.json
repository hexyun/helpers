{
  "name": "helpers",
  "private": true,
  "version": "0.1.0",
  "description": "helpers for hexyun dev",
  "main": "dist/helpers.common.js",
  "module": "dist/vue.helpers.esm.js",
  "scripts": {
    "test": "jest test",
    "clean": "rm -fr dist/*",
    "build": "(if [ ! -d dist ];then  mkdir dist; fi) && rm -fr dist/* && node build/build.js",
    "watch": "watch \"npm run build\" src",
    "prepublish": "npm run build",
    "lint": "./node_modules/standard/bin/cmd.js"
  },
  "dependencies": {
    "@babel/core": "^7.8.4",
    "eslint": "^6.8.0",
    "eslint-config-standard": "^14.1.0",
    "husky": "0.15.0-rc.13",
    "jest": "^25.1.0",
    "lint-staged": "9.5.0",
    "rollup": "^1.31.1",
    "rollup-plugin-babel": "latest",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-standard": "^1.0.0",
    "watch": "^1.0.2"
  },
  "devDependencies": {
    "html-minifier": "^3.0.2",
    "istanbul": "^0.4.5",
    "rollup-plugin-replace": "^1.1.1",
    "uglify-js": "^2.7.0"
  },
  "lint-staged": {
    "src/**/*.js": [
      "npm run lint",
      "npm run test"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run test"
    }
  },
  "standard": {
    "ignore": [
      "dist",
      "node_modules"
    ]
  },
  "jest": {
    "globalSetup": "",
    "globals": {},
    "modulePaths": [
      "src"
    ],
    "transformIgnorePatterns": [
      "<rootDir>/dist",
      "<rootDir>/build",
      "<rootDir>/node_modules"
    ],
    "moduleNameMapper": {
      "^@util(.*)$": "<rootDir>/src/util$1",
      "^@validators(.*)$": "<rootDir>/src/validator$1",
      "^@src(.*)$": "<rootDir>/src$1",
      "^@detector(.*)$": "<rootDir>/src/detector$1"
    }
  },
  "bugs": "https://github.com/hexyun/helpers/issues",
  "author": "huangjiangtao@hexdo.com",
  "license": "BSD 3-Clause"
}
